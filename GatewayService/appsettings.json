{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Identity": {
    "Authority": "http://identity-service:5001"
  },
  "ReverseProxy": {
    "Routes": {
      "auction-route": {
        "ClusterId": "auction-cluster",
        "Match": {
          "Path": "/auctions/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/auctions/{**catch-all}"
          }
        ]
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/search/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/search/{**catch-all}"
          }
        ]
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/{**catch-all}"
          }
        ]
      },
      "bid-route": {
        "ClusterId": "bid-cluster",
        "Match": {
          "Path": "/bids/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v1/bids/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auction-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auction-api:8080"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://search-api:8080"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-service:5001"
          }
        }
      },
      "bid-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://bid-api:8080"
          }
        }
      }
    }
  }
}
