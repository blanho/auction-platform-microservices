# Environment Variables Template
# Copy to .env and fill with actual values
# NEVER commit the .env file to version control!

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=auction_db_user
POSTGRES_PASSWORD=<generate-strong-password-here>

# =============================================================================
# MESSAGE QUEUE
# =============================================================================
RABBITMQ_USER=auction_mq_user
RABBITMQ_PASS=<generate-strong-password-here>

# =============================================================================
# CACHE
# =============================================================================
REDIS_PASSWORD=<generate-strong-password-here>

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secret key for signing tokens (minimum 64 characters)
JWT_SECRET_KEY=<generate-64-char-random-string>

# NextAuth secret for Next.js authentication
NEXTAUTH_SECRET=<generate-32-char-random-string>

# Identity client credentials
IDENTITY_CLIENT_ID=nextApp
IDENTITY_CLIENT_SECRET=<generate-strong-password-here>

# =============================================================================
# PAYMENT (STRIPE)
# =============================================================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_<your-stripe-secret-key>
STRIPE_PUBLISHABLE_KEY=pk_test_<your-stripe-publishable-key>

# Get this from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_<your-webhook-signing-secret>

# =============================================================================
# STORAGE
# =============================================================================
# Token signing key for secure download URLs (minimum 32 characters)
STORAGE_TOKEN_KEY=<generate-32-char-random-string>

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production
LOG_LEVEL=Information

# URLs (update for your domain)
FRONTEND_URL=https://your-domain.com
GATEWAY_URL=https://api.your-domain.com
IDENTITY_URL=https://auth.your-domain.com
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# EMAIL SERVICE
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Resend API key (alternative to SMTP)
RESEND_API_KEY=

# =============================================================================
# EXTERNAL AUTHENTICATION (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
AUCTION_API_MEMORY_LIMIT=512M
AUCTION_API_CPU_LIMIT=0.5

# =============================================================================
# HELPER COMMANDS
# =============================================================================
# Generate random strings using PowerShell:
# [Convert]::ToBase64String([Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
#
# Or using OpenSSL:
# openssl rand -base64 32
