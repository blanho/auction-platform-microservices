# Environment Variables Template
# Copy to .env and fill with actual values

# PostgreSQL Configuration
POSTGRES_USER=auction_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# RabbitMQ Configuration
RABBITMQ_USER=auction_user
RABBITMQ_PASS=your_rabbitmq_password_here

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
LOG_LEVEL=Information

# URLs (update for your domain)
FRONTEND_URL=https://your-domain.com
GATEWAY_URL=https://api.your-domain.com
IDENTITY_URL=https://auth.your-domain.com
NEXTAUTH_URL=https://your-domain.com

# NextAuth Configuration
NEXTAUTH_SECRET=your_super_secret_nextauth_key_here
IDENTITY_CLIENT_ID=nextApp
IDENTITY_CLIENT_SECRET=your_identity_client_secret_here

# SMTP Configuration (for email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Resource Limits
AUCTION_API_MEMORY_LIMIT=512M
AUCTION_API_CPU_LIMIT=0.5
